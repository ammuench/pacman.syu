---
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import "../styles/global.css";

type Props = {
  title: string;
  description?: string;
};

const props = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>{props.title}</title>
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,300;1,900&display=swap"
    />
    <style is:global>
      pre {
        padding: var(--spacing);
        border: 1px solid var(--color-sky-300);
        border-radius: var(--radius-md);
        overflow-x: auto;
        font-size: calc(100% * 0.75);
        background-color: var(--color-zinc-900);
        color: var(--color-sky-400);
        margin: 1rem 0;
      }

      /* Text Hierarchy */
      h1 {
        font-size: var(--text-3xl);
        font-weight: 900;
        color: var(--color-sky-100);
        line-height: 1.2;
      }

      h2 {
        font-size: var(--text-xl);
        font-weight: 800;
        color: var(--color-sky-200);
        line-height: 1.3;
      }

      h3 {
        font-size: var(--text-lg);
        font-weight: 700;
        color: var(--color-sky-300);
        line-height: 1.4;
      }

      p {
        font-size: var(--text-sm);
        color: var(--color-sky-300);
        line-height: 1.6;
        margin: 1rem 0;
      }

      .rss-html > p {
        border-left: solid 1px var(--color-sky-300);
        padding-left: calc(0.875rem / 2);
      }

      .lead {
        font-size: var(--text-base);
        color: var(--color-sky-200);
        font-style: italic;
        margin-bottom: 2rem;
      }
    </style></head
  >

  <body class="bg-zinc-700 font-mono">
    <main>
      <slot />
    </main>
  </body>
</html>
